@page "/employeeData"

<PageTitle>Employee Details</PageTitle>

@using AppDev.Blazor.Data
@using AppDev.Blazor.Data.DTO
@using AppDev.Blazor.Data.Services
@inject EmployeeService EmployeeService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (employeeData == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Temp. (F)</th>
            <th>Summary</th>
        </tr>
        </thead>
        <tbody>
        <tr>
                @* <td>@employeeData.Designation</td> *@
                @* <td>@employeeData.Salary</td> *@
            </tr>
        </tbody>
    </table>
}

@code {
    private Object? employeeData;
    protected override async Task OnInitializedAsync()
    {
        employeeData = await EmployeeService.GetEmployeeAsync();
    }

}